        <table align="center" border="">
            <caption><h2>user data</h2></caption>
            <tr>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>gender</th>
                <th>hobby</th>
                <th>city</th>
                <th>phone</th>
                <th>image</th>
                <th>action</th>
            </tr>
            
            <% user.map((val)=> {
